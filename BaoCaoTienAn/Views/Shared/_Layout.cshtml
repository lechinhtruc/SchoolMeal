<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaoCaoTienAn.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</head>
<body class="overflow-hidden bg-body-secondary vh-100 vw-100">
    <div class="d-flex p-3 h-100 w-100">
        <div class="d-flex flex-column bg-white h-100 rounded shadow-sm me-2" style="min-width:250px;">
            <div class="d-flex px-2 py-4 justify-content-center w-100 bg-body border-bottom rounded-top">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/resources/logo1.png" alt="Logo" width="120" height="60" />
                </a>
            </div>
            <div class="d-flex flex-column p-2 mt-1 h-100">
                <span class="btn d-flex px-2 gap-2 align-items-center w-100 border-0 collapsed" data-bs-toggle="collapse" data-bs-target="#collapseAccount">
                    <i class="bi bi-person-vcard-fill me-1"></i>
                    <span class="fw-bold w-100 text-start">Tài khoản</span>
                    <i class="bi bi-caret-down-fill" style="font-size:10px;"></i>
                </span>

                <div class="collapse @(ViewContext.RouteData.Values["controller"]!.ToString() == "Account" ? "show" : "") ms-4" id="collapseAccount"
                     style="font-size:13px;">
                    <a class="btn shadow-none @(ViewContext.RouteData.Values["action"]!.ToString() == "ThongTin" ? "bg-danger text-light":"") d-flex px-2 py-1 gap-1 align-items-center w-100 border-0"
                       asp-controller="Account"
                       asp-action="ThongTin">
                        <i class="bi bi-dot"></i>
                        <span class="fw-bold">Thông tin tài khoản</span>
                    </a>
                    <a class="btn shadow-none @(ViewContext.RouteData.Values["action"]!.ToString() == "DoiMatKhau" ? "bg-danger text-light":"") d-flex px-2 py-1 gap-1 align-items-center w-100 border-0"
                       asp-controller="Account"
                       asp-action="DoiMatKhau">
                        <i class="bi bi-dot"></i>
                        <span class="fw-bold">Đổi mật khẩu</span>
                    </a>
                    <a class="btn shadow-none rounded-pill d-flex px-2 py-1 gap-1 align-items-center w-100 border-0"
                       asp-controller="Account"
                       asp-action="Logout">
                        <i class="bi bi-dot"></i>
                        <span class="fw-bold">Đăng xuất</span>
                    </a>
                </div>

                <span class="btn d-flex px-2 gap-2 align-items-center w-100 border-0 collapsed" data-bs-toggle="collapse" data-bs-target="#NurturingManagementReport">
                    <i class="bi bi-currency-dollar me-1"></i>
                    <span class="fw-bold w-100 text-start">Quản lý thu chi</span>
                    <i class="bi bi-caret-down-fill" style="font-size:10px;"></i>
                </span>

                <div class="collapse @(ViewContext.RouteData.Values["controller"]!.ToString() == "NurturingManagementReport" ? "show" : "") ms-4" id="NurturingManagementReport">
                    <a class="btn shadow-none @(ViewContext.RouteData.Values["action"]!.ToString() == "TienAn" ? "bg-danger text-light":"") d-flex px-2 py-1 gap-1 align-items-center w-100 border-0"
                       asp-controller="NurturingManagementReport"
                       asp-action="TienAn">
                        <i class="bi bi-dot"></i>
                        <span class="fw-bold">Tiền ăn</span>
                    </a>
                </div>
            </div>
            <small class="opacity-50 text-center user-select-none" style="font-size:12px;">© Kidsoft</small>
        </div>

        <div class="d-flex flex-column w-100 h-100">
            <div class="d-flex justify-content-between align-items-center rounded shadow-sm bg-white px-3 py-2">
                <span class="d-flex flex-column">
                    <b class="fs-4">@ViewData["Title"]</b>
                    <small class="opacity-75">@ViewData["Description"]</small>
                </span>
                <div class="d-flex gap-1 align-items-center">
                    <partial name="_NotificationDropDownPartial" />
                    <hr style="width:1px;height:20px;"/>
                    <partial name="_UserDropDownPartial" />
                </div>
            </div>
            <div class="d-flex rounded shadow-sm bg-white mt-2 w-100 h-100 position-relative">
                <partial name="_LoadingPartial" />
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
