<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/cr-1.7.0/r-2.5.0/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</head>
<body class="overflow-hidden bg-body-secondary vh-100 vw-100">
    <partial name="_ResultToastPartial" />
    <partial name="_ConfirmModalPartial" />
    <div class="d-flex p-3 h-100 w-100">
        <div class="d-flex flex-column bg-white h-100 rounded shadow-sm me-2" style="min-width:250px;">
            <div class="d-flex px-2 py-4 justify-content-center w-100 bg-body border-bottom rounded-top">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/resources/logo1.png" alt="Logo" width="120" height="60" />
                </a>
            </div>
            <partial name="_SidebarMenuPartial" />
            <small class="opacity-50 text-center user-select-none" style="font-size:12px;">© Kidsoft</small>
        </div>

        <div class="d-flex flex-column w-100 h-100">
            <header class="d-flex justify-content-between align-items-center rounded shadow-sm bg-white px-3 py-2">
                <span class="d-flex flex-column">
                    <b class="fs-4">@ViewData["Title"]</b>
                    <small class="opacity-75">@ViewData["Description"]</small>
                </span>
                <div class="d-flex gap-1 align-items-center">
                    <partial name="_NotificationDropDownPartial" />
                    <hr style="width:1px;height:20px;" />
                    <partial name="_UserDropDownPartial" />
                </div>
            </header>
            <div class="d-flex rounded shadow-sm bg-white mt-2 w-100 h-100 position-relative overflow-hidden">
                <partial name="_LoadingPartial" />
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/cr-1.7.0/r-2.5.0/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
        @if (!string.IsNullOrEmpty(TempData["Result"]?.ToString()))
        {
            @:$('.toast').toast('show');
        }});
    </script>
    <script type="text/javascript">
        $(document).ready(() => {
            $("#dtHistoryLog").DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json'
                },
                colReorder: true,
                dom: '<"mt-3"<"row mb-3"<"col"l><"col"f>>rt<"row my-3"<"col"i><"col"p>>>'
            });
        })
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
