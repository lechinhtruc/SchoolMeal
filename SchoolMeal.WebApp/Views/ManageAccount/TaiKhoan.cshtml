@using DataAccess.Models;
@{
    ViewData["Title"] = "Danh sách người dùng";
    ViewData["Description"] = "Danh sách tất cả người dùng trong hệ thống";
}

@model IEnumerable<AccountModel>

<div class="d-flex flex-column w-100 px-3 overflow-auto">
    <div class="d-flex mt-3">
        <button class="btn btn-success d-flex align-items-center gap-2 create-user-btn">
            <i class="bi bi-person-fill-add fs-5"></i>
            Tạo người dùng mới
        </button>
    </div>
    <table id="dtHistoryLog" class="table table-striped table-hover table-bordered" width="100%">
        <thead class="table-light">
            <tr>
                <th scope="col">Tên người dùng</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Ngày tạo</th>
                <th scope="col">Ngày hết hạn</th>
                <th scope="col">Quyền hạn</th>
                <th scope="col" style="width:12%;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
                @foreach (var user in Model)
                {
                    <tr class="align-middle">
                        <td>@user.Username</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.CreatedAt.ToString("d")</td>
                        <td>@user.ExpiredAt.ToString("d")</td>
                        <td>@user.Role</td>
                        <td class="d-flex gap-1 align-items-center justify-content-center">
                            <button type="button" class="btn btn-success edit-user-btn" edit-user-id="@user.Id"><i class="bi bi-pencil-square"></i> Sửa</button>
                            <button type="button" class="btn btn-danger delete-user-btn @(user.Role == "Admin" ? "disabled" : null)" delete-user-id=@(user.Role != "Admin" ? user.Id : null)>
                                <i class="bi bi-person-x-fill"></i>
                                Xoá
                            </button>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>