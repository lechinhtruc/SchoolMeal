@using DataAccess.Models;
@{
    ViewData["Title"] = "Tạo mới tài khoản";
    ViewData["Description"] = "Tạo tài khoản mới cho người dùng để đăng nhập vào hệ thống";
}

@model AccountModel;

<div class="d-flex flex-column w-100 align-items-center justify-content-center">
    <div class="d-flex flex-column align-items-center mb-3">
        <div class="d-flex align-items-center justify-content-center rounded-pill border text-bg-success" style="width:80px;height:80px;">
            <i class="bi bi-person-fill-add fs-1"></i>
        </div>
        <span class="fw-bold text-uppercase my-3 fs-5">Tạo tài khoản</span>
    </div>
    <form class="d-flex flex-column gap-2" style="width:500px;" method="post" asp-action="TaoTaiKhoan" asp-controller="ManageAccount">
        <div class="form-floating">
            <input type="text" class="form-control" id="Username" placeholder="Tên người dùng" asp-for="Username">
            <label for="Username">Tên người dùng</label>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="Password" placeholder="Mật khẩu" asp-for="Password">
            <label for="Password">Mật khẩu</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input type="tel" class="form-control" id="PhoneNumber" placeholder="Số điện thoại" asp-for="PhoneNumber">
            <label for="PhoneNumber">Số điện thoại</label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-floating w-100">
            <select class="form-select" id="UserRoles" aria-label="Floating label select">
                <option selected value="">Chọn quyền hạn của người dùng</option>
                <option value="User">Người dùng</option>
                <option value="Admin">Người quản trị (Admin)</option>
            </select>
            <label for="UserRoles">Quyền hạn</label>
           @* <span asp-validation-for="Role" class="text-danger"></span>*@
        </div>
        <div class="form-floating w-100">
            <input type="date" class="form-control" id="ExpiredDate" placeholder="Hạn sử dụng" asp-for="ExpiredAt">
            <label for="ExpiredDate">Hạn sử dụng</label>
            <span asp-validation-for="ExpiredAt" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success mt-3">Tạo tài khoản</button>
    </form>
</div>